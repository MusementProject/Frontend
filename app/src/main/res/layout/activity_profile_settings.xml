<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".ProfileSettings">

    <!-- Header (верхняя панель) -->
<include
android:id="@+id/header"
layout="@layout/header"
android:layout_width="match_parent"
android:layout_height="wrap_content"
app:layout_constraintTop_toTopOf="parent"
app:layout_constraintLeft_toLeftOf="parent"
app:layout_constraintRight_toRightOf="parent" />

    <!-- Footer (нижняя панель, например main_menu) -->
<include
android:id="@+id/main_menu"
layout="@layout/main_menu"
android:layout_width="match_parent"
android:layout_height="wrap_content"
app:layout_constraintBottom_toBottomOf="parent"
app:layout_constraintLeft_toLeftOf="parent"
app:layout_constraintRight_toRightOf="parent" />

    <!-- Прокрутка основного содержимого между хедером и футером -->
<ScrollView
android:id="@+id/scrollViewProfileSettings"
android:layout_width="0dp"
android:layout_height="0dp"
app:layout_constraintTop_toBottomOf="@id/header"
app:layout_constraintBottom_toTopOf="@id/main_menu"
app:layout_constraintLeft_toLeftOf="parent"
app:layout_constraintRight_toRightOf="parent"
android:padding="16dp">

<!-- Внутренний LinearLayout для размещения всех элементов -->
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <!-- Аватар пользователя -->
    <ImageView
        android:id="@+id/ivAvatar"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="center_horizontal"
        android:scaleType="centerCrop"
        android:background="#9A9A9A"
        android:contentDescription="User's profile picture"/>

    <!-- Кнопка для смены аватарки -->
    <Button
        android:id="@+id/btnChangeAvatar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="8dp"
        android:text="@string/change_profile_picture"
        android:textColor="#FFFFFF"
        android:backgroundTint="@color/light_blue" />

    <View
        android:layout_width="match_parent"
        android:layout_height="16dp"
        android:layout_marginTop="8dp" />

    <!-- Подпись и поле ввода Имени -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Username:"
        android:textSize="16sp"
        android:textColor="#FFFFFF" />

    <EditText
        android:id="@+id/etName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#FFFFFF"
        android:textColorHint="#80FFFFFF"
        android:background="@drawable/edittext_background"
        android:layout_marginTop="4dp"
        android:padding="8dp"
        android:textSize="16sp"
        android:inputType="textPersonName"
        android:text="name" />

    <!-- Подпись и поле ввода Никнейма -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Nickname:"
        android:textSize="16sp"
        android:textColor="#FFFFFF" />

    <EditText
        android:id="@+id/etNickname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#FFFFFF"
        android:textColorHint="#80FFFFFF"
        android:background="@drawable/edittext_background"
        android:layout_marginTop="4dp"
        android:padding="8dp"
        android:textSize="16sp"
        android:inputType="text"
        android:text="nickname" />

    <!-- Поле ввода Био -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Bio:"
        android:textSize="16sp"
        android:textColor="#FFFFFF" />

    <EditText
        android:id="@+id/etBio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:padding="8dp"
        android:textSize="16sp"
        android:gravity="top"
        android:inputType="textMultiLine"
        android:textColor="#FFFFFF"
        android:textColorHint="#80FFFFFF"
        android:background="@drawable/edittext_background"
        android:minLines="3"
        android:hint="Tell us about yourself" />

    <!-- Поле ввода Telegram -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="Telegram:"
        android:textSize="16sp"
        android:textColor="#FFFFFF" />

    <EditText
        android:id="@+id/etTelegram"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:padding="8dp"
        android:textSize="16sp"
        android:hint="Telegram (@username)"
        android:inputType="text"
        android:textColor="#FFFFFF"
        android:textColorHint="#80FFFFFF"
        android:background="@drawable/edittext_background" />

    <!-- Кнопка "Сохранить" -->
    <Button
        android:id="@+id/btnSave"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Save"
        android:textColor="#FFFFFF"
        android:backgroundTint="@color/light_blue" />

</LinearLayout>
</ScrollView>

    </androidx.constraintlayout.widget.ConstraintLayout>
