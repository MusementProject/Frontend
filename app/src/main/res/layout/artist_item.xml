<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/artist_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_light_orange"
    android:padding="8dp"
    android:clipToOutline="true">

    <LinearLayout
        android:id="@+id/artist_layout"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/artist_photo"
            android:layout_width="80dp"
            android:layout_height="match_parent"
            android:background="@drawable/rounded_corners_artists"
            android:clipToOutline="true"
            android:contentDescription="Artist Photo" />

        <TextView
            android:id="@+id/artist_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginLeft="15dp"
            android:text="Artist Name"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="italic"/>

        <TextView
            android:id="@+id/song_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:text="0 songs"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"/>
    </LinearLayout>
</FrameLayout>